                               name:&amp;apos;system&amp;apos;,&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    type:&amp;apos;pie&amp;apos;,&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    radius : [50,170],&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    center: [&amp;apos;50%&amp;apos;, &amp;apos;50%&amp;apos;],&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    roseType: &amp;apos;area&amp;apos;,&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    x: &amp;apos;40%&amp;apos;,&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    max: 40,&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    sort: &amp;apos;ascending&amp;apos;,&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    data: function()&amp;#123;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    	var arr = [];&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    	for (var i = data.length - 1; i &amp;gt;= 0; i--) &amp;#123;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    		arr.push(&amp;#123;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    			name:data[i].name,&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    			value:data[i].value&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    		&amp;#125;);&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    	&amp;#125;;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    	return arr;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                    &amp;#125;()&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                                &amp;#125;]&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                            &amp;#125;);&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                        &amp;#125;,&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                        error: function(jqXHR)&amp;#123;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                            alert(&amp;quot;error status:&amp;quot; + jqXHR.status);&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                        &amp;#125;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                    &amp;#125;);&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;                &amp;#125;);&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;            &amp;#125;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;        );&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;    &amp;lt;/script&amp;gt;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;&amp;lt;/body&amp;gt;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;&amp;lt;div id=&amp;quot;footer&amp;quot; style=&amp;quot;heghit:15%;&amp;quot;&amp;gt;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;	&amp;lt;h3&amp;gt;footer&amp;lt;/h3&amp;gt;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;&amp;lt;/div&amp;gt;&lt;/div&gt;&lt;div class=&quot;line&quot;&gt;&amp;lt;/html&amp;gt;&lt;/div&gt;&lt;/pre&gt;&lt;/td&gt;&lt;/tr&gt;&lt;/table&gt;&lt;/figure&gt;
